<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.dralagen</groupId>
        <artifactId>pom</artifactId>
        <version>1.0.0</version>
    </parent>

    <artifactId>csv2xml</artifactId>
    <version>0.2.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>csv2xml</name>
    <description>A parser csv file to xml file</description>

    <licenses>
        <license>
            <name>GNU Affero General Public License version 3</name>
            <url>http://www.gnu.org/licenses/agpl.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>dralagen</id>
            <name>Dralagen</name>
            <email>dralagen@dralagen.fr</email>
            <url>http://dralagen.fr</url>
            <timezone>Europe/Paris</timezone>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/dralagen/csv2xml.git</connection>
        <developerConnection>scm:git:https://github.com/dralagen/csv2xml.git</developerConnection>
        <url>https://github.com/dralagen/csv2xml</url>
    </scm>

    <properties>
        <java.mainClass>org.dralagen.Csv2xml</java.mainClass>
    </properties>

    <repositories>
        <repository>
            <id>dralagen-maven-repo</id>
            <url>https://raw.github.com/dralagen/maven-repo/master/</url>
            <snapshots>
                <enabled>false</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>internal.repo</id>
            <name>Temporary Staging Repository</name>
            <url>file://${project.build.directory}/mvn-repo</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>

            <plugin>
                <groupId>com.github.github</groupId>
                <artifactId>site-maven-plugin</artifactId>
            </plugin>

            <!--
                mvn jgitflow:release-start
                mvn jgitflow:release-finish
            -->
            <plugin>
                <groupId>external.atlassian.jgitflow</groupId>
                <artifactId>jgitflow-maven-plugin</artifactId>
                <configuration>
                    <flowInitContext>
                        <versionTagPrefix />
                    </flowInitContext>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>

